.discussion
  .info
    =curly_header "Идеи и советы", :class => "category"
    =link_to @discussion.author.profile.full_name, user_path(@discussion.author), :class => "author"
    %h1=@discussion.title
    .counters
      .left
        .date=@discussion.created_at # TODO: use i18n from date.ru.yml
      .right
        .likes-small
          =@discussion.likes.count
        =#@discussion.favorites.count
  .content
    =raw @discussion.content
  .bottom
    .left
      tags
    .right
      %a add_to_favorite
      %a i_like_it
  .clear
  .comments
    =curly_header t("comment.header", :n => @comments.count)
    .comments_list
      =nested_comments(@comments)
    .add_comment
      %h2=t("comment.new.title")
      =render("comments/form", :reply_form => false)
    .reply_form
      =render("comments/form", :form_id => "reply_form", :reply_form => true)