.message_preview
    .left_col
        =user_preview message.sender, :small
    .right_col
        =link_to message.sender.profile.full_name, user_path(message.sender), :class => "user_name"
        -unless message.subject.empty?
            %h3=message.subject
        -link_to user_message_path(@user, message), :class => "message_link" do
            .body
                =message.body.truncate(150)
        %div.date=message.created_at